  "devDependencies": {
    "@action-validator/cli": "^0.6.0",
    "@action-validator/core": "^0.6.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "@vercel/ncc": "^0.38.3",
    "action-docs": "^1.2.0",
